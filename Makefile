SHELL := /bin/bash

.PHONY: clean # clean files generated by python3 setup.py install
clean:
	-rm -rf build/ dist/ hecat.egg-info/

.PHONY: virtualenv # setup python virtualenv
virtualenv:
	python3 -m venv .venv

.PHONY: test # run linter
test: virtualenv
	source .venv/bin/activate && \
	pip3 install pylint pyyaml && \
	pylint hecat
